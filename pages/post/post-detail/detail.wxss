.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 450rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  top: 180rpx;
  left: 50%;
  margin-left: -51rpx;
  opacity: 0.6;
}

.avatar-date {
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
} 

.avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-left: 33rpx;
  margin-right: 22rpx;
}

.auther {
  color: #333;
  font-size: 36rpx;
  font-weight: 500;
  margin-right: 22rpx;
}

.normal {
  color: #666;
  font-size: 32rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}

.date {
  color: #666;
  font-size: 32rpx;
}

.title {
  color: #4B556C;
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 2px;
  margin-left: 40rpx;
  margin-bottom: 25rpx;
}

.icon-container {
  margin-bottom: 20rpx;
}

.icon {
  float: right;
  margin-right: 40rpx;
}

.icon image {
  width: 90rpx;
  height: 90rpx;
}

.share {
  margin-left: 28rpx;
}

.horizon {
  background-color: #E5E5E5;
  height: 1px;
  width: 660rpx;
  position: relative;
  top: 45rpx;
  vertical-align: middle;
  z-index: -99;
  margin: 0 auto;
}

.content {
  color: #666;
  font-size: 32rpx;
  letter-spacing: 2px;
  line-height: 44rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}