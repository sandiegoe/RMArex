@import "/pages/movies/moviesgrid/moviesgrid-template.wxss";

.movie-list-container {
  padding-bottom: 30rpx;
  background-color: #F2F2F2;
}

.search {
  background-color: #F2F2F2;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.search-img {
  margin: auto 0 auto 20rpx;
}

.search-input {
  font-size: 28rpx;
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
}

.placeholder {
  margin-left: 20rpx;
  font-size: 14px;
  color: #d1d1d1;
}

.xx-img {
  width: 30rpx;
  height: 30rpx;
  margin: auto 10rpx auto 10rpx;
}