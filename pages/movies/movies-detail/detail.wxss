@import "/pages/movies/stars/stars-template.wxss";

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter:blur(20px);
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
}

.title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
}

.countryyear {
  margin-top: 30rpx;
  color: #fff;
  font-size: 28rpx;
}

.like {
  margin-top: 50rpx;
  height: 34rpx;
}

.wish_count, .reviews_count {
  color: red;
  font-size: 25rpx;
  margin-right: 20rpx;
  line-height: 34rpx;
  vertical-align: middle;
}

.normal {
  margin-right: 35rpx;
  font-size: 26rpx;
  color: #666666;
}

.movie-img {
  position: absolute;
  width: 180rpx;
  height: 240rpx;
  top: 160rpx;
  right: 30rpx;
}

.movieinfo-container {
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
  padding-bottom: 50rpx;
}

.original_title {
  color: #333;
  font-size: 28rpx;
  letter-spacing: 2px;
  font-weight: bold;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.stars_con, .unit {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.typename {
  color: #555;
  margin-right: 30rpx;
  font-size: 28rpx;
}

.typevalue {
  color: #555;
  font-size: 28rpx;
}

.hr {
  width: 100%;
  height: 2rpx;
  background-color: #D9D9D9;
}

.summary-container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 50rpx 40rpx;
}

.summary-title {
  color: #999;
  font-size: 26rpx;
}

.summary {
  margin-top: 20rpx;
  color: #555;
  font-size: 28rpx;
  line-height: 40rpx;
}

.hr2 {
  width: 100%;
  height: 4rpx;
  background-color: #D9D9D9;
}

.castinfo-container {
  display: flex;
  flex-direction: column;
  padding-left: 40rpx;
}

.castinfo-title {
  color: #999;
  font-size: 26rpx;
  margin-top: 50rpx;
}

.castinfo {
  margin-top: 40rpx;
  width: 100%;
  white-space: nowrap;
}

.cast-item {
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  margin-right: 40rpx;
  margin-bottom: 50rpx;
  text-align: center;
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
  font-size: 28rpx;
  color: #333;
}